{
  "name": "typescript-project-setup",
  "version": "1.0.0",
  "author": "",
  "description": "",
  "keywords": [],
  "license": "MIT",
  "main": "dist/index.js",
  "packageManager": "yarn@3.8.6",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --poll ./src/index.ts",
    "build": "tsc -b",
    "lint": "eslint --cache \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint --cache --fix \"src/**/*.{ts,tsx}\""
  },
  "devDependencies": {
    "@types/node": "16.18.119",
    "@typescript-eslint/eslint-plugin": "8.18.1",
    "@typescript-eslint/parser": "8.18.1",
    "@yarnpkg/pnpify": "3.1.8",
    "eslint": "9.17.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "18.0.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-prettier": "5.2.1",
    "husky": "7.0.4",
    "lint-staged": "15.2.11",
    "prettier": "2.8.8",
    "ts-node": "10.9.2",
    "ts-node-dev": "1.1.8",
    "typescript": "4.9.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn dlx @yarnpkg/doctor"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": "yarn lint:fix"
  }
}
